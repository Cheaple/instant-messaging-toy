<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.im">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IM"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.base.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.base.LoginActivity" />
        <activity android:name=".activity.base.MainActivity" />
        <activity android:name=".activity.chats.ChattingActivity" />
        <activity android:name=".activity.chats.GroupInfoActivity" />
        <activity android:name=".activity.contacts.InfoActivity" />
        <activity android:name=".activity.contacts.SearchActivity" />
        <activity android:name=".activity.discover.PostActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".activity.contacts.GroupCreatingActivity" />
        <activity android:name="com.dmcbig.mediapicker.PickerActivity"/>
        <activity android:name="com.dmcbig.mediapicker.TakePhotoActivity"/>
        <activity android:name="com.oden.syd_camera.SydCameraActivity"/>
        <activity android:name="com.oden.syd_camera.SydVideoActivity"/>

    </application>

</manifest>