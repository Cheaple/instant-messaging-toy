<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moment_type3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="7.5dp"
            android:layout_height="45dp"
            />
        <ImageView
            android:id="@+id/avatar_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/avatar1" />
        <View
            android:layout_width="7.5dp"
            android:layout_height="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="7.5dp"
                />
            <TextView
                android:id="@+id/nickname_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="昵称"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="7.5dp"
                />
            <TextView
                android:id="@+id/moment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/paragraph1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="7.5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/picture1"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/image1" />
                <View
                    android:layout_width="7.5dp"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:id="@+id/picture2"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/image2" />
                <View
                    android:layout_width="7.5dp"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:id="@+id/picture3"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/image3" />
            </LinearLayout>>
            <View
                android:layout_width="match_parent"
                android:layout_height="7.5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/published_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="1小时前"/>
                <ImageView
                    android:id="@+id/avatar_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/avatar_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_comment" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
